<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.goodee.market.trade.item.ItemDAO">
    
    

    <insert id="setItemReview" parameterType="ReviewDTO">
    INSERT INTO REVIEW (REVIEWNUM, ITEMNUM, MEMBERNUM,  REVIEWTITLE, REVIEWCONTENT, REVIEWHIT, REVIEWSTAR)
	VALUES(REVIEW_SEQ.NEXTVAL, #{itemNum}, #{memberNum}, #{reviewTitle},#{reviewContent},0, #{reviewStar});
    </insert>

